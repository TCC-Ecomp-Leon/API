{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**.*.htm"],
  "exclude": ["node_modules"]
}